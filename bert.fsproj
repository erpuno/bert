<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Authors>Namdak Tonpa;Siegmentation Fault</Authors>
    <Company>INFOTECH SE</Company>
    <UseAppHost>true</UseAppHost>
    <Version>1.0.0</Version>
    <IncludeSource>true</IncludeSource>
    <PackageTags>Erlang;BERT</PackageTags>
    <PackageDescription>BERT encoder/decoder</PackageDescription>
    <RepositoryUrl>https://github.com/erpuno/bert</RepositoryUrl>
    <Description>Performant and idiomatic F# Erlang BERT encoder/decoder.</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="src/types.fs" />
    <Compile Include="src/decoder.fs" />
    <Compile Include="src/encoder.fs" />
    <Compile Include="src/program.fs" />
  </ItemGroup>

</Project>
